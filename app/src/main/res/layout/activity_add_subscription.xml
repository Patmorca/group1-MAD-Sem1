<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSubscriptionActivity">



    <RelativeLayout
    android:id="@+id/Banner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="UselessParent">

    <ImageView
        android:id="@+id/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/HeaderDescription"
        app:srcCompat="@drawable/headerback_svg" />

        <Button
            android:id="@+id/HomeBtn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:backgroundTint="#C9CEBD"
            android:background="@drawable/button"


            android:fontFamily="@font/krona"
            android:text="@string/Home"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/AddSubBtn"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button"

            android:backgroundTint="#C9CEBD"
            android:fontFamily="@font/krona"


            android:text="@string/Add"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:ignore="RelativeOverlap" />


        <Button
            android:id="@+id/SettingsBtn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"

            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:backgroundTint="#C9CEBD"

            android:fontFamily="@font/krona"
            android:text="@string/Settings"
            android:textColor="@color/black" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/SubOptions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Banner"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="85dp"
        >

        <TextView
            android:id="@+id/NameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SubCreate_Name"
            android:layout_marginStart="32dp"

            android:fontFamily="@font/krona"
            android:textColor="@color/black"

            />

        <EditText
            android:id="@+id/Name"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/NameTitle"

            android:textAlignment="center"
            android:background="#C9CEBD"
            android:popupBackground="#C9CEBD"
            android:inputType="text"
            android:imeOptions="actionDone"
            tools:ignore="Autofill,LabelFor,TextFields"
        />

        <TextView
            android:id="@+id/FreqTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Freq_Name"

            android:layout_marginTop="70dp"
            android:layout_marginStart="32dp"

            android:fontFamily="@font/krona"
            android:textColor="@color/black"

            />
        <Spinner
            android:id="@+id/FreqOptions"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/FreqTitle"


            android:textAlignment="center"
            android:background="#C9CEBD"
            android:popupBackground="#C9CEBD"
            />

        <TextView
        android:id="@+id/StartDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Start_Name"

        android:layout_marginTop="140dp"
        android:layout_marginStart="32dp"

        android:fontFamily="@font/krona"
        android:textColor="@color/black"
        />

        <Button
            android:id="@+id/DatePickerButton"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/datepickerbutton"
            android:layout_below="@id/StartDateTitle"

            android:textColor="@color/black"
            android:backgroundTint="#C9CEBD"
        />

        <TextView
            android:id="@+id/ReminderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Rem_Name"

            android:layout_marginTop="210dp"
            android:layout_marginStart="32dp"

            android:fontFamily="@font/krona"
            android:textColor="@color/black"

            />
        <Spinner
            android:id="@+id/ReminderOptions"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ReminderTitle"


            android:textAlignment="center"
            android:background="#C9CEBD"
            android:popupBackground="#C9CEBD"
            />


        <TextView
            android:id="@+id/CostTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cost_Name"
            android:layout_marginTop="280dp"
            android:layout_marginStart="32dp"

            android:fontFamily="@font/krona"
            android:textColor="@color/black"

            />



        <!--NEED TO ADD $ FORMATTING -->
        <!--NEED TO ADD $ FORMATTING -->

        <EditText
            android:id="@+id/Cost"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/CostTitle"

            android:textAlignment="center"
            android:background="#C9CEBD"
            android:popupBackground="#C9CEBD"
            android:inputType="number"
            android:imeOptions="actionDone"
            tools:ignore="Autofill,LabelFor,TextFields"

        />

    </RelativeLayout>





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/FooterLayout"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/Footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:adjustViewBounds="true"
            android:contentDescription="@string/FooterDescription"
            app:srcCompat="@drawable/footerback_svg"
        />

        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"


            android:layout_centerInParent="true"

            android:backgroundTint="#C9CEBD"
            android:fontFamily="@font/krona"
            android:text="@string/CreateSub"
            android:textColor="@color/black"
            android:background="@drawable/button"

        />
    </RelativeLayout>

</RelativeLayout>