<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp_Activity"
    android:background="@color/background">

    <TextView
        android:id="@+id/AL_TV1_Title"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/krona"
        android:text="SubScribe"
        android:textColor="@color/Subcribe_color"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/SUA_Name"
        android:layout_width="277dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/cutstom_edt"
        android:fontFamily="@font/krona"
        android:hint="Name"
        android:paddingLeft="12dp"

        android:maxLines="1"
        android:scrollHorizontally="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AL_TV1_Title" />

    <AutoCompleteTextView
        android:id="@+id/SUA_Email"
        android:layout_width="277dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cutstom_edt"
        android:hint="Email"
        android:paddingLeft="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SUA_Name"
        android:fontFamily="@font/krona"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/SUA_PassW"
        android:layout_width="277dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cutstom_edt"
        android:fontFamily="@font/krona"
        android:hint="Password"
        android:paddingLeft="12dp"

        android:maxLines="1"
        android:scrollHorizontally="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SUA_Email" />

    <Button
        android:id="@+id/SUA_Registerbt"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/buttonlgn"

        android:fontFamily="@font/krona"
        android:text="Register"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SUA_PassW" />

    <Button
        android:id="@+id/SUA_Backbt"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/buttonlgn"

        android:fontFamily="@font/krona"
        android:text="Back"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SUA_Registerbt" />


</androidx.constraintlayout.widget.ConstraintLayout>