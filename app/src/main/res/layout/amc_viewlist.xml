<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/AMCVL_name"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:textSize="35sp"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/brown"
        android:background="@drawable/mainviewsubscriptions"
        android:fontFamily="@font/krona"
        android:padding="10dp"
        android:text="Name"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/AMCVL_Price"
        android:layout_width="75dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/AMCVL_name"
        android:layout_toRightOf="@id/AMCVL_name"
        android:background="@drawable/mainviewsubscriptions"
        android:text="price"
        android:textColor="@color/brown"
        android:gravity="center"
        android:textSize="15sp"
        />

</RelativeLayout>
